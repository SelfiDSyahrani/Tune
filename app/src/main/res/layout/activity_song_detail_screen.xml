<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/night_black">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textSongTitle"
        android:layout_marginStart="75dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="75dp"
        android:src="@drawable/clipart" />

    <TextView
        android:id="@+id/textSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Song Title"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:layout_above="@+id/textArtist"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Artist"
        android:textColor="#FAFAFA"
        android:layout_above="@+id/seekBar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutControlButtons"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="0"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:progressTint="@color/gray" />

    <TextView
        android:id="@+id/textCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:textColor="#FAFAFA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:textColor="#FAFAFA"
        android:text="00:00"/>

    <LinearLayout
        android:id="@+id/layoutControlButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/night_black"
            android:src="@drawable/baseline_skip_previous_24" />

        <ImageButton
            android:id="@+id/btnReplay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/night_black"
            android:src="@drawable/baseline_replay_10_24" />

        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/night_black"
            android:src="@drawable/baseline_pause_24" />
        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/night_black"
            android:src="@drawable/baseline_forward_10_24" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/night_black"
            android:src="@drawable/baseline_skip_next_24" />


    </LinearLayout>

</RelativeLayout>
